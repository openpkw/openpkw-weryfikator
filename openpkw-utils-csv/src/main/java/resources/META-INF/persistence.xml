<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
  version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
  <persistence-unit name="openpkw" transaction-type="RESOURCE_LOCAL">
    
    <class>org.openpkw.model.entity.Candidate</class>
    <class>org.openpkw.model.entity.DistrictCommittee</class>
    <class>org.openpkw.model.entity.DistrictCommitteeAddress</class>
    <class>org.openpkw.model.entity.ElectionCommittee</class>
    <class>org.openpkw.model.entity.ElectionCommitteeDistrict</class>
    <class>org.openpkw.model.entity.ElectionCommitteeVote</class>
    <class>org.openpkw.model.entity.PeripheralCommittee</class>
    <class>org.openpkw.model.entity.PeripheralCommitteeAddress</class>
    <class>org.openpkw.model.entity.Protocol</class>
    <class>org.openpkw.model.entity.User</class>
    <class>org.openpkw.model.entity.UserSession</class>
    <class>org.openpkw.model.entity.Vote</class>
    
    
    <properties>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
      <property name="javax.persistence.jdbc.url"  value="jdbc:mysql://localhost/openpkw" />
      <property name="javax.persistence.jdbc.user" value="root" />
      <property name="javax.persistence.jdbc.password" value="root" />
      <property name="eclipselink.ddl-generation" value="create-tables" />
      <property name="eclipselink.ddl-generation.output-mode" value="database" />
    </properties>
  </persistence-unit>
</persistence>